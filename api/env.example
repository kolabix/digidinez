# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/digidinez?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# File Upload Configuration
MAX_FILE_SIZE=5242880

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# GitHub Actions Deployment Configuration
GITHUB_TOKEN=your-github-personal-access-token-here
GITHUB_OWNER=your-github-username-or-org
GITHUB_REPO=digidinez
GITHUB_WORKFLOW_ID=deploy-menu-manual-staging.yml

# SSG Build Secret (for pre-rendering)
SSG_BUILD_SECRET=your-ssg-build-secret-here

# Base URLs
PUBLIC_MENU_URL=https://digidinez.com
